@model TiendaOnline.Models.Producto

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Producto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Código
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Codigo)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                Modelo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modelo)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Precio
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>
            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Imagen)
            </dd>
            <dt class="col-sm-2">
                Categoría
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Stock
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                Marca
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Marca)
            </dd>
            <dt class="col-sm-2">
                Activo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activo)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductoId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a class="btn btn-dark" asp-action="Index">Volver al Listado</a>
        </form>
    </div>
</div>
