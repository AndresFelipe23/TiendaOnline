@model TiendaOnline.Models.Banner

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Detalle</h1>
            <h4 class="card-subtitle mb-4">Banner</h4>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImageUrl)
                    </dd>
                </dl>
            </div>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.BannerId" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-dark">Volver</a>
            </div>
        </div>
    </div>
</div>
