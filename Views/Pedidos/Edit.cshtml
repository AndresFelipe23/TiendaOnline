@model TiendaOnline.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <h5 class="card-header">Editar</h5>
    <div class="card-body">
        <h4 class="card-title">Pedido</h4>
        <hr />
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PedidoId" />
                        <div class="form-group">
                            <label asp-for="UsuarioId" class="control-label"></label>
                            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Fecha" class="control-label"></label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Estado" class="control-label"></label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="DireccionIdSeleccionada" class="control-label"></label>
                            <input asp-for="DireccionIdSeleccionada" class="form-control" />
                            <span asp-validation-for="DireccionIdSeleccionada" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Total" class="control-label"></label>
                            <input asp-for="Total" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

