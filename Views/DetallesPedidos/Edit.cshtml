@model TiendaOnline.Models.Detalle_Pedido

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Editar el detalle de un producto</h1>

            <h4>Detalle producto</h4>
            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DetallePedidoId" />

                <div class="mb-3">
                    <label for="PedidoId" class="form-label">Pedido</label>
                    <select asp-for="PedidoId" class="form-control" asp-items="ViewBag.PedidoId"></select>
                    <span asp-validation-for="PedidoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ProductoId" class="form-label">Producto</label>
                    <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                    <span asp-validation-for="ProductoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Cantidad" class="form-label">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>

            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
