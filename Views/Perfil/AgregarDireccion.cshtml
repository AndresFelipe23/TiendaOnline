@model Direccion

@{
    ViewData["Title"] = "Agregar Direccion";
}

<h2>Agregar dirección</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="AgregarDireccion" method="post">
            <input type="hidden" asp-for="UsuarioId" value="@ViewBag.id" />
            <div class="form-group">
                <label asp-for="Address" class="control-label">Dirección</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ciudad" class="control-label">Ciudad</label>
                <input asp-for="Ciudad" class="form-control" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado</label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoPostal" class="control-label">Código Postal</label>
                <input asp-for="CodigoPostal" class="form-control" />
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Details" asp-route-id="@ViewBag.id" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>